<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relLayMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            style="@style/BaseTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:text="@string/suggestion_for_you"
            android:textColor="@color/theme_black"
            android:textSize="@dimen/_14sdp" />

        <ImageView
            android:id="@+id/imgPrevSuggestion"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_toStartOf="@+id/imgNextSuggestion"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_5sdp"
            android:rotation="90"
            android:src="@drawable/drop_down_arrow" />

        <ImageView
            android:id="@+id/imgNextSuggestion"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_5sdp"
            android:rotation="270"
            android:src="@drawable/drop_down_arrow" />

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relLayMessage"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:elevation="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/suggestionViewPager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/suggestionTabLayout"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_below="@+id/suggestionViewPager"
                app:tabBackground="@drawable/viewpager_selector"
                app:tabGravity="center" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>