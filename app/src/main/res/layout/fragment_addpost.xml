<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    tools:context=".fragments.home.HomeFragment">

    <include
        android:id="@+id/addPostToolBar"
        layout="@layout/layout_toolbar_back"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helpAndSupportToolBar">

        <EditText
            android:id="@+id/etPostMessage"
            style="@style/BaseSearchEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bottom_line_background"
            android:gravity="top"
            android:hint="@string/write_something"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:minLines="3" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSelectedFiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPostMessage"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="1"
            tools:listitem="@layout/layout_selected_file" />

        <TextView
            android:id="@+id/tvActivityMessage"
            style="@style/BaseTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnAddPost"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center"
            android:textSize="@dimen/_11sdp"
            android:text="@string/add_post_warning"
            android:textColor="@color/theme_black" />

        <Button
            android:id="@+id/btnAddPost"
            style="@style/BaseColorRoundedGradientButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="@string/post"
            android:textSize="@dimen/_14sdp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>