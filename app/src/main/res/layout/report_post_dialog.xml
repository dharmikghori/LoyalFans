<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/round_without_border_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/BaseTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/dialog_top"
            android:gravity="center_vertical"
            android:padding="@dimen/_10sdp"
            android:text="@string/report_abuse"
            android:textAllCaps="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/add_preview"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etReportComment"
                style="@style/BaseEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/round_without_border_bg"
                android:gravity="start"
                android:hint="@string/write_a_comment"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:lines="4"
                android:padding="@dimen/_7sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/border_color" />

            <TextView
                android:id="@+id/tvReport"
                style="@style/BaseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/report"
                android:textColor="@color/colorAccent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>