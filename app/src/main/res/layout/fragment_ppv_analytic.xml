<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/_10sdp"
    tools:context=".fragments.home.HomeFragment">

    <include
        android:id="@+id/analyticsToolbar"
        layout="@layout/layout_toolbar_back"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/analyticsToolbar">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/analyticsTabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"

            android:background="@drawable/tab_background"
            app:tabBackground="@drawable/tab_layout_bg_selector"
            app:tabGravity="fill"
            app:tabIndicatorColor="@null"
            app:tabMode="fixed"
            app:tabRippleColor="@null"
            app:tabSelectedTextColor="@color/white"
            app:tabTextAppearance="@style/MyCustomTabText"
            app:tabTextColor="@color/blue_color" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerAnalytics"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>