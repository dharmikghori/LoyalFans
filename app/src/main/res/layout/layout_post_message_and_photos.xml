<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relLayMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginEnd="@dimen/_13sdp">

        <TextView
            android:id="@+id/tvActivityMessage"
            style="@style/BaseTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:text="@string/this_is_test_post_thanks_for_following_me_on_loyal_fans_this_is_test_fully_test"
            android:textColor="@color/theme_black"
            android:textSize="@dimen/_13sdp" />

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relLayMessage"
        android:layout_margin="@dimen/_10sdp"
        android:elevation="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_10sdp">

        <ImageView
            android:id="@+id/imgActivityPhotos"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:minHeight="@dimen/_150sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/macd_logo"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>