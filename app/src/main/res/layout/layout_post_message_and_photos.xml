<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layPostMessageAndVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relLayMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_13sdp">

            <TextView
                android:id="@+id/tvActivityMessage"
                style="@style/BaseTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="@string/this_is_test_post_thanks_for_following_me_on_loyal_fans_this_is_test_fully_test"
                android:textColor="@color/theme_black"
                android:textSize="@dimen/_13sdp" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relLayMessage"
            android:layout_margin="@dimen/_10sdp"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp">

                <com.calendar.loyalfans.utils.CustomViewPager
                    android:id="@+id/photos_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"
                    app:tabBackground="@drawable/viewpager_selector"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp" />

                <ImageView
                    android:id="@+id/imgLock"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:clickable="true"
                    android:contentDescription="@string/app_name"
                    android:focusable="true"
                    android:padding="@dimen/_100sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/lock"
                    android:visibility="gone" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <TextView
        android:id="@+id/tvReportWarning"
        style="@style/BaseTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/report_abusive_post_message"
        android:textColor="@color/white"
        android:visibility="gone" />

</RelativeLayout>