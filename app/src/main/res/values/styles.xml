<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="BaseTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/cambria</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BaseEarningTitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/cambria</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BaseEarningSubTitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/theme_black</item>
        <item name="android:fontFamily">@font/cambria</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_9sdp</item>
    </style>

    <style name="SideMenuBaseTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/theme_black</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/cambria</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BaseEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:layout_marginStart">@dimen/_30sdp</item>
        <item name="android:layout_marginEnd">@dimen/_30sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:fontFamily">@font/cambria</item>
        <item name="android:padding">@dimen/_15sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BaseSearchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/theme_black</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:background">@drawable/et_bottom_line_background</item>
        <item name="android:fontFamily">@font/cambria</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
    </style>


    <style name="BaseCommentEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/theme_black</item>
        <item name="android:textColorHint">@color/blue_color</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">@font/cambria</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/_15sdp</item>
    </style>

    <style name="FullBorderEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/theme_black</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:background">@drawable/edittext_round_border</item>
        <item name="android:fontFamily">@font/cambria</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
    </style>

    <style name="BaseWhiteBorderButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/_30sdp</item>
        <item name="android:layout_marginEnd">@dimen/_30sdp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:fontFamily">@font/cambria</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BaseColorRoundedGradientButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_basecolor_bg</item>
        <item name="android:fontFamily">@font/cambria</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/blue_color</item>
        <item name="android:fontFamily">@font/cambria</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/blue_color</item>
        <item name="android:fontFamily">@font/cambria</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/blue_color</item>
        <item name="android:fontFamily">@font/cambria</item>
        <item name="android:textAllCaps">false</item>
        <!--        <item name="android:background">@drawable/track_switch</item>-->
        <!--        <item name="android:button">@color/transparent</item>-->
    </style>

    <style name="BaseColorGradientButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/basecolor_bg</item>
        <item name="android:fontFamily">@font/cambria</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BaseTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:path">@font/cambria</item>

    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_in_right</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="TextStyleTabLayout">
        <item name="android:textSize">@dimen/_9sdp</item>
    </style>

</resources>